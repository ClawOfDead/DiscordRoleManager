<div class="row">
    <div class="col-6"><h1>Users</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/addDiscordUser" type="button" class="btn btn-primary align-self-center">Add user</a>
    </div>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">UserID</th>
            <th scope="col">Username</th>
            <th scope="col">Role</th>
            <th scope="col">Valid until</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <th scope="row">{{this.userID}}</th>
            <td>{{this.username}}</td>
            <td>{{this.temporaryRole}}</td>
            <td>{{this.endDate}}</td>
            <td class="text-end">
                <a href="/editUser/{{this.userID}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
                <button type="button" class="btn btn-small btn-danger" data-toggle="popover" title="Delete User" data-content="Do you really want to delete this user?">Delete User</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>